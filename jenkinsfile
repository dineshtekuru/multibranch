pipeline{
   agent any 
   stages{
    stage ("deploy to dev"){
    when{
    branch "develop"
    }
     steps{
        echo "deploy to dev servers" 
     
     }
   }
    stage ("deploy to release"){
    when{
    branch "release"
    }
     steps{
        echo "deploy to release servers" 
     
     }
   }
    stage ("deploy to test"){
    when{
    branch "test"
    }
     steps{
        echo "deploy to test servers" 
     
     }
   }
   
  }


}
