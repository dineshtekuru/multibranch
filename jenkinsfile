pipeline{
   agent any 
   stages{
    stage ("deploy to dev"){
    when{
    branch "develop"
    }
     steps{
        echo "deploy to dev servers" 
     
     }
   }
    stage ("deploy to prod"){
    when{
    branch "prod"
    }
     steps{
        echo "deploy to prod servers" 
     
     }
   }
    stage ("deploy to test"){
    when{
    branch "test"
    }
     steps{
        echo "deploy to test servers" 
     
     }
   }
   
  }


}
